<h1>Listing menu Items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
    <th>Content</th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%=h menu.name %></td>
    <td><%=h menu.ancestors.first.name if menu.ancestors.present? %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New menu', new_menu_path %>